<% content_for :breadcrumbs do %>
  <ol class="breadcrumb">
    <li><a href="/">Home</a></li>
    <li><%= link_to 'User', users_path %></li>
    <li class="active"><%= @user.full_name %></li>
  </ol>
<% end %>

<p id="notice"><%= notice %></p>
<div class="shell property-form">
  <dl class="dl-horizontal">
    <dt>First name:</dt>
    <dd><%= @user.first_name %></dd>

    <dt>Last name:</dt>
    <dd><%= @user.last_name %></dd>

    <dt>Role:</dt>
    <dd><%= @user.role %></dd>

    <dt>Email:</dt>
    <dd><%= @user.email %></dd>

    <dt>Contact number:</dt>
    <dd><%= @user.contact_number %></dd>

    <dt>E-mail address:</dt>
    <dd>
      <%= @user.sendgrid_email_address %>
    </dd>
  </dl>
</div>
</br>
<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
