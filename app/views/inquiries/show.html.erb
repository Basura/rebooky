<% content_for :breadcrumbs do %>
  <ol class="breadcrumb">
    <li><a href="/">Home</a></li>
    <li><%= link_to 'Inquiries', inquiries_path %></li>
    <li class="active"><%= @inquiry.subject %></li>
  </ol>
<% end %>

<p id="notice"><%= notice %></p>
  <!-- Nav tabs -->
<div class="shell inquiry-show">
  <dl class="dl-horizontal">
    <dt>Property:</dt>
    <dd><%= link_to @inquiry.subject, @inquiry.property.title %></dd>

    <dt>Subject:</dt>
    <dd><%= @inquiry.subject %></dd>

    <dt>From:</dt>
    <dd><%= @inquiry.from %></dd>

    <dt>Date:</dt>
    <dd><%=l @inquiry.created_at %></dd>

    <div class="mail-body">
        <%=raw @inquiry.html %>
    </div>
  </dl>
</div>
</br>
<%= link_to 'Back', request.referrer || inquiries_path %>
