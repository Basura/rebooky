<div class="shell login-form">
  <h4 class="offset-top-80 heading-divider text-left text-nowrap password-title-form">Forgot your password?</h4>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'offset-top-70 text-md-left rd-mailform'}) do |f| %>
    <%= f.error_notification %>

    <div class="cell-md-4">
      <div class="mfInput">
        <%= f.input :email, required: true, autofocus: true, label: false, placeholder: '* E-mail' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Send me reset password instructions", class:  "btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
