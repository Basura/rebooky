<% content_for :breadcrumbs do %>
  <ol class="breadcrumb">
    <li><a href="./">Home</a></li>
    <li class="active">Registration</li>
  </ol>
<% end %>

<div class="shell login-form">
  <h4 class="offset-top-80 heading-divider text-left text-nowrap">Sign up</h4>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'offset-top-70 text-md-left rd-mailform' }) do |f| %>
    <%= f.error_notification %>
    <div class="cell-md-4">
      <div class="mfInput">
        <%= f.input :first_name, required: true, autofocus: true, placeholder: '* First-name', label: false %>
      </div>
    </div>
    <div class="cell-md-4">
      <div class="mfInput">
        <%= f.input :last_name, required: true, autofocus: true, placeholder: 'Last-name', label: false %>
      </div>
    </div>
    <div class="cell-md-4">
      <div class="mfInput">
        <%= f.input :email, required: true, autofocus: true, placeholder: '* E-mail', label: false %>
      </div>
    </div>
    <div class="cell-md-4">
      <div class="mfInput">
        <%= f.input :password, required: true, placeholder: '* Password', label: false,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
      </div>
    </div>
    <div class="cell-md-4">
      <div class="mfInput">
        <%= f.input :password_confirmation, required: true, label: false, placeholder: '* Password confirmation' %>
      </div>
    </div>

    <div class="form-actions col-sm-offset-4">
      <%= f.button :button, "Sign up", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
