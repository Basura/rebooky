<%= simple_form_for(property) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :city %>
    <%= f.input :state %>
    <%= f.input :home_type %>
    <%= f.input :bedrooms %>
    <%= f.input :sleeps %>
    <%= f.input :frequency %>
    <%= f.input :recreational_type %>
    <%= f.association :peak_seasons, input_html: { multiple: true} %>
  </div>

  <div class="form-actions">
    <%= f.button :button, class: 'btn-primary'  %>
  </div>
  </br>
<% end %>
