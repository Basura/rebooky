<% content_for :breadcrumbs do %>
  <ol class="breadcrumb">
    <li><a href="./">Home</a></li>
    <li class="active">User Management</li>
  </ol>
<% end %>

<div class="shell">
  <h4 class="offset-top-80 heading-divider text-left text-nowrap user-title-form">User Management</h4>

  <table class="table table-bordered table-responsive index-user">
    <thead>
      <tr>
        <th>#</th>
        <th>First name</th>
        <th>Last name</th>
        <th>Email</th>
        <th>Contact number</th>
        <th colspan="3" class="actions-header-columns">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each_with_index do |user, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.email %></td>
          <td><%= user.contact_number %></td>
          <td><%= link_to 'Show', user %></td>
          <td><%= link_to 'Edit', [:edit, user] %></td>
          <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to 'New User', new_user_path, class: 'btn btn-primary' if policy(User).create? %>
</div>

