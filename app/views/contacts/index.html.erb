<% content_for :breadcrumbs do %>
  <ol class="breadcrumb">
    <li><a href="./">Home</a></li>
    <li class="active">Contacs</li>
  </ol>
<% end %>

<div class="shell">
  <h4 class="offset-top-80 heading-divider text-left text-nowrap user-title-form">Contacts</h4>

  <table class="table table-bordered table-responsive index-contact">
    <thead>
      <tr>
        <th>#</th>
        <th>Fist name</th>
        <th>Last name</th>
        <th>Email</th>
        <th>Phone number</th>
        <th>Address</th>
        <th>Property</th>
        <th colspan="3" class="actions-header-columns">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @contacts.each_with_index do |contact, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= contact.first_name %></td>
          <td><%= contact.last_name %></td>
          <td><%= contact.email %></td>
          <td><%= contact.phone_number %></td>
          <td><%= contact.address %></td>
          <td><%= Property.find(contact.property).title %></td>
          <td><%= link_to 'Show', contact %></td>
          <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
          <td><%= link_to 'Delete', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Contact', new_contact_path, class: 'btn btn-primary' %>
</div>
